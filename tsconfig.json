{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "bundler",
        "sourceMap": true,
        "outDir": "js",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "ts/types/*"
            ]
        }
    },
    "include": [
        "ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}